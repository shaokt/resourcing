{{dynamic-styles showAssignment=true numAssignmentsViewing=40}}

<div id="pageContainer"
    data-route={{router.currentRouteName}}
    data-dragging={{constants.draggable}}
    data-editing="{{constants.editingRow}}"
    data-show-hidden={{settings.showHiddenRows}}
    data-view="{{constants.dataView}}"
    data-view-team={{constants.teamAssignmentView}}
>
    {{header-section model=model year=year hasFile=hasFile addAssignment="addAssignment" settings=settings}}
    {{#if hasFile}}
    <main>
        {{outlet}}
    </main>
    {{/if}}
</div>
