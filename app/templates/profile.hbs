<div id="pageContainer" data-page="profile" data-edit="{{customUnlocked}}">
{{#each model as |item|}}
<div id="header">
    <img id="headerLogo" src="/assets/img/header.png" />
    <div id="digidollars">
        <div class="star small"></div>
        <div class="star large">
            <div>{{digidollars}}</div>
        </div>
    </div>
</div>
<style>
    /*blouse*/
    ul.viewOptions .profile a .person:before {
        background:{{item.dress}};
    }

    /*hair*/
    ul.viewOptions .profile a .person .hair:before {
        background:linear-gradient(to bottom, {{item.highlight}} 25%, {{item.lowlight}} 75%, rgba(0, 0, 0, 0.5) 100%) !important;
    }

    /*bangs*/
    ul.viewOptions .profile a .person .hair:after {
        background:linear-gradient(50deg, {{item.lowlight}} 25%, {{item.highlight}} 75%, {{item.highlight}} 100%);
    }

    /*lipstick*/
    ul.viewOptions .profile a .person .face:before {
        border-bottom-color:{{item.lipstick}};
        border-right-color:{{item.lipstick}};
    }

    /*lipstick animation*/

    [data-edit="true"] ul.viewOptions .profile a .person.female .face:before,
    ul.viewOptions .profile a:hover .person.female .face:before {
        border:1px solid {{item.lipstick}};
        border-bottom-width:2px;
    }

    /*necklace*/
    ul.viewOptions .profile a .person .neck:after {
        box-shadow:{{item.necklace}} 0.8em 0 0 0, {{item.necklace}} 0.6em 0.6em 0 0, {{item.necklace}} 0 1em 0 0, {{item.necklace}} -0.6em 0.6em 0 0, {{item.necklace}} -0.8em 0 0 0;
    }

    /*circle*/
    #pageContainer header .menu .buttonContainer .viewOptions .profile:before {
        border:3px solid {{item.circle}}
    }
</style>

<header>
    <div class="menu">
        <div class="buttonContainer">
            <ul class="viewOptions">
                <li class="profile">
                    <a href="javascript:void(0)">
                        <span class="person female">
                            <span class="hair"></span>
                            <span class="face"></span>
                            <span class="neck"></span>
                        </span>
                    </a>
                </li>
                {{#unless editing}}
                    <li class="assignment">
                        <a href="javascript:void(0)" {{action "edit" on="click"}}>
                            <span class="pencil"><span class="wood"></span></span>
                            <span class="text">Edit</span>
                        </a>
                    </li>
                {{/unless}}
            </ul>
            {{#unless firstLoad}}
            {{#if editing}}
                <div class="custom">
                    <div data-element="hair">
                        <div class="label">Highlights</div>
                        <a href="javascript:void(0)" style="background:#b12800;" {{action 'highlight' item}}></a>
                        <a href="javascript:void(0)" style="background:#abc;" {{action 'highlight' item}}></a>

                        <div style="position:absolute;top:0;left:70px;">
                            <div class="label">Lowlights</div>
                            <a href="javascript:void(0)" style="background:#804208;" {{action 'lowlight' item}}></a>
                            <a href="javascript:void(0)" style="background:#ff9caa;" {{action 'lowlight' item}}></a>
                        </div>
                    </div>
                    <div data-element="dress">
                        <div class="label">Blouse</div>
                        <a href="javascript:void(0)" style="background:#6666ff;" {{action 'dress' item}}></a>
                        <a href="javascript:void(0)" style="background:red" {{action 'dress' item}}></a>
                        <div style="position:absolute;top:0;left:60px;">
                            <div class="label">Lipstick</div>
                            <a href="javascript:void(0)" style="background:red" {{action 'lipstick' item}}></a>
                            <a href="javascript:void(0)" style="background:#c1a" {{action 'lipstick' item}}></a>
                        </div>
                    </div>

                    <div data-element="necklace">
                        <div class="label">Necklace</div>
                        <a href="javascript:void(0)" style="background:#f9c115;" {{action 'necklace' item}}></a>
                        <a href="javascript:void(0)" style="background:#80FF00;" {{action 'necklace' item}}></a>
                    </div>

                    <div data-element="circle">
                        <div class="label">Border</div>
                        <a href="javascript:void(0)" style="background:#000;" {{action 'circle' item}}></a>
                        <a href="javascript:void(0)" style="background:#80FF00;" {{action 'circle' item}}></a>
                    </div>
                </div>
            {{/if}}
            {{/unless}}
            <div class="name">{{item.firstname}} {{item.lastname}}</div>
        </div>
    </div>
</header>

<main>
    <div id="form">
        <div class="item">
            <label>Email:</label>
            {{#if editing}}
                {{input class="input" value=item.email}}
            {{else}}
                {{item.email}}
            {{/if}}
        </div>
        <div class="item">
            <label>Mobile #:</label>
            {{#if editing}}
                {{input class="input" value=item.mobile}}
            {{else}}
                {{item.mobile}}
            {{/if}}
        </div>
        <div class="item">
            <label>Mailing Address:</label>
            {{#if editing}}
                {{input class="input" value=item.mailingaddress}}
            {{else}}
                {{item.mailingaddress}}
            {{/if}}
        </div>
        {{#if rrsp}}
            <div class="item">
                <label>RRSP?:</label>
                {{#if editing}}
                    <label class="radio" for="rrspYes">Yes</label>
                    {{#if item.rrsp}}
                        <input type="radio" name="rrsp" for="rrspYes" checked="checked" {{action "rrsp" item true this on="click"}}/>
                    {{else}}
                        <input type="radio" name="rrsp" for="rrspYes" {{action "rrsp" item true this on="click"}}/>
                    {{/if}}
                    <label class="radio" for="rrspNo">No</label>
                    {{#unless item.rrsp}}
                        <input type="radio" name="rrsp" for="rrspNo" checked="checked" {{action "rrsp" item false this}}/>
                    {{else}}
                        <input type="radio" name="rrsp" for="rrspNo" {{action "rrsp" item false this}}/>
                    {{/unless}}
                {{else}}
                    &nbsp;______
                {{/if}}
            </div>
        {{/if}}
        {{#if firstLoad}}
            {{#unless editing}}
            <button id="ok" {{action 'step1OK' on='click'}}>OK</button>
            {{/unless}}
        {{/if}}
        {{#if editing}}
            <button id="ok" {{action 'edit' on='click'}}>OK</button>
        {{/if}}
    </div>

<header>
    <div class="menu">
        <div class="buttonContainer">
            <ul class="viewOptions">
                <li class="today">
                    <a href="/" {{action "scrollToday" on="click"}}>
                        <span class="date"><span>{{today}}</span></span>
                        <span class="page"></span>
                    </a>
                    <div class="text">
                        <div><a href="javascript:void(0)">Upcoming ROGERS Bill in 5 days</a></div>
                        <div><a href="javascript:void(0)">Pre-approved Credit Limit Increase - Offer expires in 7 days</a></div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</header>
</main>
{{/each}}
<ul class="steps">
    <li {{action "step" 1}}>1</li>
    <li {{action "step" 2}}>2</li>
</ul>
{{counter}}
</div>
