{{! do not move styles to component as it will cause multiple view renders}}
<style>
    .info { left:{{leftScroll}}px; }
    .dateMarker { left:{{mousePos}}px; }
    #dateLine { left:{{mousePos}}px; }
    {{counterCSS}}
</style>

<div id="pageContainer" data-view="{{config.view}}" data-show-hidden={{config.showHiddenRows}} data-dragging={{constants.draggable}}>
    {{header-section config=config assignments=assignments updateName="updateName"}}
    <main>
        <div class="dateLine" id="dateLine"></div>
        <div class="dateLine" id="todayDateLine"></div>
        {{resource-row model=model config=config updateName="updateName"}}
    </main>
</div>
