{{date-line}}
{{#each model as |assignment|}}
    {{#if (assignment-view-people settings.view assignment.id currentAssignment)}}
    <section class="resourceRow{{if assignment.hidden ' hidden'}}"
        data-active="{{assignment.active}}"
        data-name="{{assignment.short}}"
        data-id="{{assignment.id}}"
    >
    	<div class="row" data-view="assignment">
            {{#if assignment.active}}
                <div class="pointer"></div>
                <div class="sizer"></div>
            {{/if}}
            <div class="tiles">{{{assignment.assignment}}}</div>
            <div class="phases">{{{assignment.phases}}}</div>
        </div>
        {{assignment-info resource=assignment assignment=assignment currentAssignment=currentAssignment viewPeopleAssigned=viewPeopleAssigned persons=persons}}
    </section>
    {{/if}}
{{/each}}
{{#if settings.isDailyCalendar}}
    {{#each persons as |resource|}}
        <section class="resourceRow">
        	<div class="row" data-view="timeOff">
                {{calendar-holiday-tiles}}
                <div class="tiles">{{{resource.timeaway}}}</div>
            </div>
        {{resource-info model=persons index=index resource=resource}}
        </section>
    {{/each}}
{{/if}}
