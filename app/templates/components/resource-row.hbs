{{#each model.resource as |resource index|}}
    <section class="resourceRow{{if resource.hidden ' hidden'}}" data-active="{{resource.active}}"
        data-name="{{resource.name}}"
        data-id="{{resource.id}}"
        data-index="{{index}}"
        draggable="{{if constants.draggable 'true'}}"
        ondragenter={{action "dragEnter"}}
        ondragstart={{action "dragStart"}}
        ondragend={{action "dragEnd"}}
        ondragover={{action "dragOver"}}
    >
        {{#if settings.isWeeklyCalendar}}
        	<div class="row" data-view="assignment">
                <div class="pointer"></div>
                <div class="sizer"></div>
                <div class="tiles">{{{resource.assignment}}}</div>
            </div>
        {{/if}}

        {{#if settings.isDailyCalendar}}
        	<div class="row" data-view="timeOff">
                <div class="pointer"></div>
                <div class="sizer"></div>
                {{calendar-holiday-tiles}}
                <div class="tiles">
                    {{{resource.timeaway}}}
                </div>
            </div>
        {{/if}}
        {{resource-info index=index resource=resource updateName="updateName" updateRow="updateRow"}}
    </section>
{{/each}}
