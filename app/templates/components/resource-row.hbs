{{#each model as |resource|}}
    <section class="resourceRow" data-active="{{resource.active}}">
        {{resource-info resource=resource active=active updateName="updateName"}}

        {{#if isWeeklyCalendar}}
        	<div class="row" data-view="assignment">
                <div class="pointer"></div>
                <div class="sizer"></div>
                <div class="tiles">{{{resource.assignment}}}</div>
            </div>
        {{/if}}

        {{#if isDailyCalendar}}
        	<div class="row" data-view="timeOff">
                <div class="pointer"></div>
                <div class="sizer"></div>
                <div class="tiles">
                    {{#if resource.updated}}
                        {{resource.timeaway}}
                    {{else}}
                        {{{resource.timeaway}}}
                    {{/if}}
                </div>
            </div>
        {{/if}}
    </section>
{{/each}}
