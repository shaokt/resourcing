{{#unless readonly}}
    <ul class="viewOptions">
        <li class="lock">
            <a href="/" {{action "editing" on="click"}}></a>
        </li>

        <li class="toggle">
            <a href="/" {{action "toggleRow" on="click"}}></a>
        </li>

        {{#if resource.hasDirects}}
            <li class="expand {{collapse}}">
                <a href="/" class="" {{action "toggleDirects" on="click"}}></a>
            </li>
        {{/if}}
    </ul>
{{/unless}}

{{#if editing}}
    {{content-editable class="name" value=resource.name key-press="filter" focus-in=constants.focusInContentEditable}}
    {{content-editable class="name" value=resource.ad key-press="filter" focus-in=constants.focusInContentEditable}}
{{else}}
	<div class="name">{{resource.name}}</div>
{{/if}}
{{resource-counters}}
