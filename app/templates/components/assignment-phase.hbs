{{#if shift}}
    {{#if assignment.phases}}
        {{input type="radio" id=id name="phase" action="shift" on="focus-in"}}
        <label for="phase{{label}}">
            <span class="verticalArrow"></span>
            <span class="horizontalArrow"></span>
        </label>

        {{#if shiftPhase}}
            <a href="/" class="link" data-break="{{breakLink}}" {{action "togglePhaseLink"}}><span class="middleLink"><span></span></span></a>
        {{/if}}
    {{/if}}
    {{#if nonResizable}}
        <a href="/" class="ok" {{action "shiftDone"}}>OK</a>
    {{/if}}
{{else}}
    {{input type="radio" id=id name="phase" action="setStamp" on="focus-in"}}
    <label for="phase{{label}}">
        <span>
        {{#if labelText}}
            {{labelText}}
        {{else}}
            {{label}}
        {{/if}}
    </span>
    </label>
{{/if}}
